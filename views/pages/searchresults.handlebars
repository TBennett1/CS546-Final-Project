<div class="topwrapper">
	<div class="middlewrapper">
		<div class="header">
			<img id="logotop" src="4.jpg" alt="Logo" class="logo" width="100" height="100">
			<div class="topnav" id="myTopnav">
				<img id="logosame" src="4.jpg" alt="Logo" class="logo" width="90" height="90">
				<a href="/">Home</a>
				<div class="dropdown">
					<button class="dropbtn">About Us
						<i class="fa fa-caret-down"></i>
					</button>
					<div class="dropdown-content">
						<a href="owner.html">Owners</a>
						<a href="partners.html">Partners</a>
					</div>
				</div>
				<a href="services.html"> Games </a>
				<a href="contact.html"> Contact </a>
				{{#if loggedin}}
				<li><a id="sign-in" href="/logout">Sign Out</a></li>
				{{else}}
				<a id="sign-in" href="/login">Sign In</a>
				{{/if}}
				<a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="myFunction()">&#9776;</a>
			</div>
		</div>
	</div>
</div>
<div id="wrapper">
	<form action="/searchresults" method="POST">
		<label for="input"> Search for a game. </label>
		<div>
			<input type="text" name="text-to-test" placeholder="Word" value="" id="input" />
			<button type="submit">Let's go!</button>
		</div>
	</form>
	{{#if loggedin}}
	You are logged in as {{currentUser}}
	{{/if}}
	<div class="content">
		{{#if noInput}}
		<p class="error"> Error 400: Input is missing</p>

		{{else}}
		{{#if resultsFound}}
		<p>Games found.</p>
		
			{{#each gamesList}}
			<h1>{{this.fullName}}</h1>
			<a href="/games/{{this.nameURL}}">
                <img class="image" src="{{this.gamePhoto}}"/>
                <div class="overlay">
                    <div class="text">Portal 2</div>
                </div>
            </a>
			{{/each}}
	
		{{else}}
		<p>No games found.</p>
		{{/if}}
		{{/if}}
	</div>
</div>