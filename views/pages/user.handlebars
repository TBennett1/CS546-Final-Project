<nav>
	<ul>
		<li><a href="/">Home</a></li>
		<li><a href="/games">Games</a></li>
		{{#if loggedin}}
			<li><a class="active" href='/user/{{userID}}'>{{currentUser}}</a></li>
            <li><a href="/logout">Log Out</a></li>
			{{else}}
			<li><a href="/login">Sign In</a></li>
		{{/if}}

	</ul>
</nav>
{{#if flag}}
    <h2>{{error}}</h2>
{{else}}
    <div class="profile">
        <img src="../{{profilePic}}" class="profile"/>
        <h3>{{firstName}} {{lastName}}</h3>
        <h3>{{email}}</h3>
        <h3><a href="/edit">Edit Profile</a></h3>
    </div>

    <h2>Previous Posts</h2>
    {{#each posts}}
        <section class="reviews">
            <h4><a href="/games/{{gameId}}">{{gameId}}</a></h4>
            <p>{{rating}} {{userReviews}}</p>
        </section>
    {{/each}}
{{/if}}
