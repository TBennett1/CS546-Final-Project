{{> navbar}}
{{#if flag}}
    <h2>{{error}}</h2>
{{else}}
    <div class="profile">
     <h2>Hey!</h2>
        <img src="../{{profilePic}}" class="profile" alt="{{firstName}}"/>
        <h3>{{firstName}} {{lastName}}</h3>
        <h3>{{email}}</h3>
        <section id="edit">
            <button class='edit' type="button">Edit Profile</button>
        </section>
    </div>

    <h2>Previous Posts</h2>
    {{#each posts}}
        <section class="reviews">
            <h3><a href="/games/{{loud gameId}}">{{gameId}}</a></h3>
            <p>{{rating}} {{userReviews}}</p>
        </section>
    {{/each}}
{{/if}}
